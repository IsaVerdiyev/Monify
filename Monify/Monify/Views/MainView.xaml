<UserControl x:Class="Monify.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monify.Views"
             xmlns:sys ="clr-namespace:System;assembly=mscorlib" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="MainViewUserControl">
    <UserControl.Resources>
        <sys:Double x:Key="param">5</sys:Double>


        <Style x:Key="VisibilitySettingsButton"  TargetType="Button"
                    BasedOn="{StaticResource HorizontalSameSizeControl}">
            <Style.Setters>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid 
        TextElement.FontSize="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*" x:Name="StatisticsRow"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- First Row-->
        <DockPanel
            LastChildFill="False"
            Background="Green">
            <Button DockPanel.Dock="Left"
                    Background="Transparent"
                    Foreground="White"
                    Command="{Binding VisibilitySettingsButtonCommands}"
                    CommandParameter="{Binding ElementName=MainViewUserControl}">
                ☰
            </Button>

            <TextBlock>
                <Run
                    FontFamily="Tahoma"
                    FontStyle="Italic">Monify</Run>
                <LineBreak/>
                <Run />
            </TextBlock>
            <Button 
                DockPanel.Dock="Right"
                Style="{StaticResource HorizontalSameSizeControl}"
                Background="Transparent"
                Foreground="White"
                Command="{Binding OtherSettingsButtonCommands}"
                CommandParameter="{Binding ElementName=MainViewUserControl}">
                ┇
            </Button>
            <Button 
                DockPanel.Dock="Right"
                Style="{StaticResource HorizontalSameSizeControl}"
                Background="Transparent"
                Foreground="White"
                Command="{Binding OpenTransactionMenuCommand}">
                ⇄
            </Button>
        </DockPanel>

        
        <!--Second Row-->

        <Button Grid.Row="1" 
            x:Name="HideAllMenus" 
            Grid.RowSpan="3"
            VerticalAlignment="Stretch"
            Opacity="0.5"
            Panel.ZIndex="1"
            Visibility="{Binding HideAllSideMenusButtonVisibility, Mode=OneWay}"
            Command="{Binding HideAllSideMenuButtonCommand}"
            CommandParameter="{Binding ElementName=MainViewUserControl}"/>



        <StackPanel 
                        x:Name="VisibilitySettingsStackPanel"
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        HorizontalAlignment="Left"
                        Panel.ZIndex="1"
                        Margin="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource PropertyMarginConverterForHidingControl}, ConverterParameter='left'}"
                        Width="100"
                        Height="300">
            <ComboBox SelectedItem="{Binding Path=SelectedAccount, Mode=TwoWay}" ItemsSource="{Binding Path=Accounts}">
            </ComboBox>
            <Button>Day</Button>
            <Button>Week</Button>
            <Button>Month</Button>
            <Button>Year</Button>
            <Button>All</Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.RowSpan="2"
                    x:Name="OtherSettingsStackPanel"
                    HorizontalAlignment="Right"
                    Panel.ZIndex="1"
                    Margin="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource PropertyMarginConverterForHidingControl}, ConverterParameter='right'}"
                    Height="300"
                    Width="100">
            <Button>Categories</Button>
            <Button Content="Accounts"
                        Command="{Binding ShowHideAccountsCommand}"/>
            <StackPanel x:Name="AccountsStackPanel" 
                                Visibility="{Binding AccountsControlVisibility}" >
                <Button Margin="2"
                                Command="{Binding AddAccountCommand}">Add Account</Button>
                <ListBox ItemsSource="{Binding Storage.Accounts}"/>
            </StackPanel>
            <Button>Currencies</Button>
            <Button>Settings</Button>
        </StackPanel>




        
        <StackPanel Grid.Row="1"
                            Orientation="Horizontal">
            
            <TextBlock Text="{Binding Path=Yesterday, StringFormat={}{0:m}, Mode=OneWay}"/>
            <TextBlock HorizontalAlignment="Center"
                                Margin="130, 0">
                            <Run Text="{Binding Path=DayOfWeek, Mode=OneWay}"/>
                            <Run>,</Run>
                            <Run Text="{Binding Path=CurrentDate, StringFormat={}{0:m}, Mode=OneWay}"/>
            </TextBlock>
        </StackPanel>


        <!-- Third Row-->

        <Grid Grid.Row="2"
                    Background="Aqua">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" MaxHeight="200"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50" x:Name="OperationsListRow" MinHeight="50"/>
            </Grid.RowDefinitions>
            
            <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ItemsSource="{Binding Path=Storage.OperationCategories}" 
                     MaxHeight="200"/>

            <GridSplitter 
            Grid.Row="1"
            Height="3"
            HorizontalAlignment="Stretch"
            ShowsPreview="False"/>


            <DockPanel Grid.Row="2">
                <Button DockPanel.Dock="top"
                    Height="50">
                    <DockPanel 
                            Width="{Binding Path=Parent.ActualWidth, RelativeSource={RelativeSource Self}}">
                        <TextBlock 
                            DockPanel.Dock="Left"> ☰</TextBlock>
                        <TextBlock 
                            DockPanel.Dock="Right"> ☰</TextBlock>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20">
                            Balance - 
                            <Run >23</Run>
                        </TextBlock>
                    </DockPanel>
                </Button>
                <ListBox Grid.ColumnSpan="2"
                         Background="Aqua"
                         Height="{Binding Path=Height, ElementName=StatisticsRow}"
                         MaxHeight="200"
                         ItemsSource="{Binding OperationStatistics, Mode=OneWay}"></ListBox>
            </DockPanel>

        </Grid>


        <!-- Fourth row-->
        <DockPanel Grid.Row="3"
                    LastChildFill="False">
            <Button DockPanel.Dock="Left" 
                    Style="{StaticResource BottomExpenseProfitButtons}"
                    Command="{Binding AddExpenseCommand}">
                -
            </Button>
            <Button DockPanel.Dock="Right" 
                    Style="{StaticResource BottomExpenseProfitButtons}"
                    Command="{Binding AddProfitCommand}">+</Button>
        </DockPanel>
    </Grid>
</UserControl>
