<UserControl x:Class="Monify.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monify.Views"
             xmlns:sys ="clr-namespace:System;assembly=mscorlib" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <sys:Double x:Key="param">5</sys:Double>
        <Storyboard x:Key="VisibilitySettingsAnimation">
            <DoubleAnimation 
                                                     Storyboard.TargetProperty="UIElement.Margin" 
                                                     To="0" 
                                                     Duration="0:0:1"/>
        </Storyboard>
        <Style x:Key="VisibilitySettingsButton"  TargetType="Button"
                    BasedOn="{StaticResource HorizontalSameSizeControl}">
            <Style.Setters>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"
                           MaxHeight="{Binding Path=Height, RelativeSource={RelativeSource Self}}"/>
            <RowDefinition Height="16*"
                           MinHeight="{Binding Path=ActualHeight, RelativeSource={RelativeSource Self}}"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="202*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="94*"
                           MaxHeight="{Binding Path=Height, RelativeSource={RelativeSource Self}}"/>
        </Grid.RowDefinitions>
        <DockPanel
            LastChildFill="False"
            Background="Green">
            <Button DockPanel.Dock="Left"
                    FontSize="30"
                    Background="Transparent"
                    Foreground="White">
                ☰
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="VisibilitySettingsStackPanel" Storyboard.TargetProperty="Margin" BeginTime="00:00:00">
                                        <SplineThicknessKeyFrame KeyTime="00:00:00" Value="0,0,0,0" />
                                        <SplineThicknessKeyFrame KeyTime="00:00:0.5" Value="40,0,-40,0" />
                                    </ThicknessAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Button.Triggers>
            </Button>

            <TextBlock>
                <Run
                    FontFamily="Tahoma"
                    FontStyle="Italic">Monify</Run>
                <LineBreak/>
                <Run />
            </TextBlock>
            <Button 
                DockPanel.Dock="Right"
                Style="{StaticResource HorizontalSameSizeControl}"
                Background="Transparent"
                Foreground="White"
                FontSize="20">
                ┇
            </Button>
        </DockPanel>
        <GridSplitter 
            Grid.Row="4"
            Height="3"
            HorizontalAlignment="Stretch"
            ShowsPreview="False"/>
        <DockPanel Grid.Row="1"
                    Grid.RowSpan="3">

            <!--</DockPanel.Margin>-->
            <StackPanel Width="Auto" DockPanel.Dock="Left" 
                        x:Name="VisibilitySettingsStackPanel"
                        Margin="-40, 0, 0, 0"
                        Panel.ZIndex="1">
                <ComboBox>
                    <ComboBoxItem>All accounts</ComboBoxItem>
                </ComboBox>
                <Button>Day</Button>
                <Button>Week</Button>
                <Button>Month</Button>
                <Button>Year</Button>
                <Button>All</Button>
            </StackPanel>
            <StackPanel 
                MinWidth="{Binding Path=Width, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
                <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal">
                    <TextBlock Text="{Binding Path=CurrentDate, StringFormat={}{0:m}, Mode=OneWay}"/>
                    <TextBlock HorizontalAlignment="Center"
                           Margin="130, 0">
                    <Run Text="{Binding Path=dayOfWeek, Mode=OneWay}"/>
                    <Run>,</Run>
                    <Run Text="{Binding Path=CurrentDate, StringFormat={}{0:m}, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
                <ListBox 
                     x:Name="operationCategoriesListBox"></ListBox>
            </StackPanel>
        </DockPanel>
        <StackPanel Grid.Row="5">
            <Button Height="48">
                <DockPanel 
                HorizontalAlignment="Stretch"
                Width="{Binding Path=Parent.ActualWidth, RelativeSource={RelativeSource Self}}">
                    <TextBlock 
                    
                    DockPanel.Dock="Left"> ☰</TextBlock>
                    <TextBlock 
                    
                    DockPanel.Dock="Right"> ☰</TextBlock>
                    <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20">
                    Balance - 
                    <Run >23</Run>
                    </TextBlock>
                </DockPanel>
            </Button>
        </StackPanel>
        <DockPanel Grid.Row="6"
                    LastChildFill="False">
            <Button DockPanel.Dock="Left" 
                    Style="{StaticResource BottomExpenseProfitButtons}"
                    Command="{Binding AddCost}">
                -
            </Button>
            <Button DockPanel.Dock="Right" Style="{StaticResource BottomExpenseProfitButtons}">+</Button>
        </DockPanel>
    </Grid>
</UserControl>
