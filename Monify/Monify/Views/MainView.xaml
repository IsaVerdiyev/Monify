<UserControl x:Class="Monify.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monify.Views"
             xmlns:sys ="clr-namespace:System;assembly=mscorlib" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="MainViewUserControl">
    <UserControl.Resources>
        <sys:Double x:Key="param">5</sys:Double>


        <Style x:Key="VisibilitySettingsButton"  TargetType="Button"
                    BasedOn="{StaticResource HorizontalSameSizeControl}">
            <Style.Setters>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"
                           MaxHeight="{Binding Path=Height, RelativeSource={RelativeSource Self}}"/>
            <RowDefinition Height="16*"
                           MinHeight="{Binding Path=ActualHeight, RelativeSource={RelativeSource Self}}"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="180*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="94*"
                           MaxHeight="{Binding Path=Height, RelativeSource={RelativeSource Self}}"/>
        </Grid.RowDefinitions>
        <DockPanel
            LastChildFill="False"
            Background="Green">
            <Button DockPanel.Dock="Left"
                    FontSize="30"
                    Background="Transparent"
                    Foreground="White"
                    Command="{Binding VisibilitySettingsButtonCommands}"
                    CommandParameter="{Binding ElementName=MainViewUserControl}">
                ☰
            </Button>

            <TextBlock>
                <Run
                    FontFamily="Tahoma"
                    FontStyle="Italic">Monify</Run>
                <LineBreak/>
                <Run />
            </TextBlock>
            <Button 
                DockPanel.Dock="Right"
                Style="{StaticResource HorizontalSameSizeControl}"
                Background="Transparent"
                Foreground="White"
                FontSize="20"
                Command="{Binding OtherSettingsButtonCommands}"
                CommandParameter="{Binding ElementName=MainViewUserControl}">
                ┇
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="OtherSettingsStackPanel"
                                                   Storyboard.TargetProperty="Margin" 
                                                                      BeginTime="00:00:00">
                                    <SplineThicknessKeyFrame KeyTime="00:00:00" Value="0,0,0,0" />
                                    <SplineThicknessKeyFrame KeyTime="00:00:0.5" Value="-70,0,70,0" >
                                    </SplineThicknessKeyFrame>
                                </ThicknessAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </DockPanel>
        <GridSplitter 
            Grid.Row="5"
            Height="3"
            HorizontalAlignment="Stretch"
            ShowsPreview="False"/>
        <DockPanel Grid.Row="1"
                    Grid.RowSpan="4">

            <!--</DockPanel.Margin>-->
            <StackPanel DockPanel.Dock="Left" 
                        x:Name="VisibilitySettingsStackPanel"
                        Margin="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource PropertyMarginConverterForHidingControl}, ConverterParameter='left'}"
                        Panel.ZIndex="1" Height="235" VerticalAlignment="Bottom">
                <ComboBox SelectedItem="{Binding Path=SelectedAccount}" ItemsSource="{Binding Path=Accounts}" >
                </ComboBox>
                <Button>Day</Button>
                <Button>Week</Button>
                <Button>Month</Button>
                <Button>Year</Button>
                <Button>All</Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right"
                        x:Name="OtherSettingsStackPanel"
                        Margin="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource PropertyMarginConverterForHidingControl}, ConverterParameter='right'}"
                        Panel.ZIndex="1">
                <Button>Categories</Button>
                <Button>Accounts</Button>
                <Button>Currencies</Button>
                <Button>Settings</Button>
            </StackPanel>
            <StackPanel 
                MinWidth="{Binding Path=Width, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
                <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal">
                    <TextBlock Text="{Binding Path=CurrentDate, StringFormat={}{0:m}, Mode=OneWay}"/>
                    <TextBlock HorizontalAlignment="Center"
                           Margin="130, 0">
                    <Run Text="{Binding Path=DayOfWeek, Mode=OneWay}"/>
                    <Run>,</Run>
                    <Run Text="{Binding Path=CurrentDate, StringFormat={}{0:m}, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
                <ListBox 
                     x:Name="operationCategoriesListBox" ItemsSource="{Binding Path=Storage.OperationCategories}"></ListBox>
            </StackPanel>
        </DockPanel>
        <StackPanel Grid.Row="6">
            <Button Height="48">
                <DockPanel 
                HorizontalAlignment="Stretch"
                Width="{Binding Path=Parent.ActualWidth, RelativeSource={RelativeSource Self}}">
                    <TextBlock 
                    
                    DockPanel.Dock="Left"> ☰</TextBlock>
                    <TextBlock 
                    
                    DockPanel.Dock="Right"> ☰</TextBlock>
                    <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20">
                    Balance - 
                    <Run >23</Run>
                    </TextBlock>
                </DockPanel>
            </Button>
        </StackPanel>
        <DockPanel Grid.Row="7"
                    LastChildFill="False">
            <Button DockPanel.Dock="Left" 
                    Style="{StaticResource BottomExpenseProfitButtons}"
                    Command="{Binding AddCostCommand}">
                -
            </Button>
            <Button DockPanel.Dock="Right" Style="{StaticResource BottomExpenseProfitButtons}">+</Button>
        </DockPanel>
    </Grid>
</UserControl>
