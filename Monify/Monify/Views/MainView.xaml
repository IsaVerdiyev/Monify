<UserControl x:Class="Monify.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monify.Views"
             xmlns:sys ="clr-namespace:System;assembly=mscorlib" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="MainViewUserControl">
    <UserControl.Resources>
        <sys:Double x:Key="param">5</sys:Double>


        <Style x:Key="VisibilitySettingsButton"  TargetType="Button"
                    BasedOn="{StaticResource HorizontalSameSizeControl}">
            <Style.Setters>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" x:Name="OperationsListRow"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <DockPanel
            LastChildFill="False"
            Background="Green">
            <Button DockPanel.Dock="Left"
                    FontSize="30"
                    Background="Transparent"
                    Foreground="White"
                    Command="{Binding VisibilitySettingsButtonCommands}"
                    CommandParameter="{Binding ElementName=MainViewUserControl}">
                ☰
            </Button>

            <TextBlock>
                <Run
                    FontFamily="Tahoma"
                    FontStyle="Italic">Monify</Run>
                <LineBreak/>
                <Run />
            </TextBlock>
            <Button 
                DockPanel.Dock="Right"
                Style="{StaticResource HorizontalSameSizeControl}"
                Background="Transparent"
                Foreground="White"
                FontSize="20"
                Command="{Binding OtherSettingsButtonCommands}"
                CommandParameter="{Binding ElementName=MainViewUserControl}">
                ┇
            </Button>
            <Button 
                DockPanel.Dock="Right"
                Style="{StaticResource HorizontalSameSizeControl}"
                Background="Transparent"
                Foreground="White"
                FontSize="20"
                Command="{Binding OpenTransactionMenuCommand}">
                ⇄
            </Button>
        </DockPanel>
        <DockPanel Grid.Row="1">
            <StackPanel DockPanel.Dock="Left" 
                        x:Name="VisibilitySettingsStackPanel"
                        Margin="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource PropertyMarginConverterForHidingControl}, ConverterParameter='left'}"
                        Panel.ZIndex="1">
                <ComboBox SelectedItem="{Binding Path=SelectedAccount}" ItemsSource="{Binding Path=Accounts}" >
                </ComboBox>
                <Button>Day</Button>
                <Button>Week</Button>
                <Button>Month</Button>
                <Button>Year</Button>
                <Button>All</Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right"
                        x:Name="OtherSettingsStackPanel"
                        Margin="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}, Converter={StaticResource PropertyMarginConverterForHidingControl}, ConverterParameter='right'}"
                        Panel.ZIndex="1">
                <Button>Categories</Button>
                <Button>Accounts</Button>
                <Button>Currencies</Button>
                <Button>Settings</Button>
            </StackPanel>


            <DockPanel x:Name="OperationsStatisticsDockPanel">
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal">
                    <TextBlock Text="{Binding Path=CurrentDate, StringFormat={}{0:m}, Mode=OneWay}"/>
                    <TextBlock HorizontalAlignment="Center"
                                Margin="130, 0">
                            <Run Text="{Binding Path=DayOfWeek, Mode=OneWay}"/>
                            <Run>,</Run>
                            <Run Text="{Binding Path=CurrentDate, StringFormat={}{0:m}, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
               
                <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ItemsSource="{Binding Path=Storage.OperationCategories}"/>

                
            </DockPanel>
        </DockPanel>
        <GridSplitter 
            Grid.Row="2"
            Height="3"
            HorizontalAlignment="Stretch"
            ShowsPreview="False"/>
        <StackPanel Grid.Row="3"
                    Height="{Binding ElementName=operationCategoriesListBox, Path=Height}"
                    Background="Aqua">
            
                <Button Height="{Binding ElementName=OperationsListRow, Path=ActualHeight, Mode=OneTime}">
                    <DockPanel 
                Height="{Binding Path=Height, ElementName=OperationsListRow}"
                Width="{Binding Path=Parent.ActualWidth, RelativeSource={RelativeSource Self}}">
                        <TextBlock 
                    
                    DockPanel.Dock="Left"> ☰</TextBlock>
                        <TextBlock 
                    
                    DockPanel.Dock="Right"> ☰</TextBlock>
                        <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20">
                    Balance - 
                    <Run >23</Run>
                        </TextBlock>
                    </DockPanel>
                </Button>
                <ListBox></ListBox>
            
        </StackPanel>
        <DockPanel Grid.Row="4"
                    LastChildFill="False">
            <Button DockPanel.Dock="Left" 
                    Style="{StaticResource BottomExpenseProfitButtons}"
                    Command="{Binding AddCostCommand}">
                -
            </Button>
            <Button DockPanel.Dock="Right" Style="{StaticResource BottomExpenseProfitButtons}">+</Button>
        </DockPanel>
    </Grid>
</UserControl>
