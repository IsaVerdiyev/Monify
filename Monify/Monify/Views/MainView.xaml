<UserControl x:Class="Monify.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monify.Views"
           
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid 
        Height="550">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="300" MaxHeight="300"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="32"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <DockPanel
            LastChildFill="False"
            Background="Green">
            <Button DockPanel.Dock="Left" 
                Width="50"
                FontSize="20"
                Background="Transparent"
                Foreground="White">
                ☰
            </Button>
            <TextBlock>
                <Run
                    FontFamily="Tahoma"
                    FontStyle="Italic">Monify</Run>
                <LineBreak/>
                <Run />
            </TextBlock>
            <Button 
                DockPanel.Dock="Right"
                Width="50"
                Background="Transparent"
                Foreground="White"
                FontSize="20">
                ┇
            </Button>
        </DockPanel>
        <GridSplitter 
            Grid.Row="2"
            Height="3"
            
            HorizontalAlignment="Stretch"
            ShowsPreview="False"/>
        <DockPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=CurrentDate, StringFormat={}{0:m}, Mode=OneWay}"/>
                <TextBlock HorizontalAlignment="Center"
                           Margin="130, 0">
                    <Run Text="{Binding Path=dayOfWeek, Mode=OneWay}"/>
                    <Run>,</Run>
                    <Run Text="{Binding Path=CurrentDate, StringFormat={}{0:m}, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
            
        </DockPanel>
        <StackPanel Grid.Row="3"
            Height="400">
            <Button>
                <DockPanel 
                HorizontalAlignment="Stretch"
                Width="{Binding Path=Parent.ActualWidth, RelativeSource={RelativeSource Self}}">
                    <TextBlock 
                    
                    DockPanel.Dock="Left"> ☰</TextBlock>
                    <TextBlock 
                    
                    DockPanel.Dock="Right"> ☰</TextBlock>
                    <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20">
                    Balance - 
                    <Run >23</Run>
                    </TextBlock>

                </DockPanel>

            </Button>
            <ListBox 
                MinHeight="400" 
                MaxHeight="400" 
                ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
        <DockPanel Grid.Row="4"
                    LastChildFill="False">
            <Button DockPanel.Dock="Left" Style="{StaticResource BottomExpenseProfitButtons}">-</Button>
            <Button DockPanel.Dock="Right" Style="{StaticResource BottomExpenseProfitButtons}">+</Button>
        </DockPanel>
    </Grid>
</UserControl>
